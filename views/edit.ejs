<%- include('partials/header') %>
<h2>Edit Book</h2>
<form action="/books/<%= book.id %>" method="POST">
  <label for="title">Title:</label>
  <input type="text" id="title" name="title" value="<%= book.title %>" required>
  <label for="author">Author:</label>
  <input type="text" id="author" name="author" value="<%= book.author %>">
  <label for="rating">Rating:</label>
  <input type="number" id="rating" name="rating" value="<%= book.rating %>" min="1" max="5">
  <label for="review">Review:</label>
  <textarea id="review" name="review"><%= book.review %></textarea>
  <label for="isbn">ISBN:</label>
  <input type="text" id="isbn" name="isbn" value="<%= book.isbn %>">
  <label for="date_read">Date Read:</label>
  <input type="date" id="date_read" name="date_read" value="<%= book.date_read.toISOString().split('T')[0] %>">
  <button type="submit">Update Book</button>
</form>
<%- include('partials/footer') %>
